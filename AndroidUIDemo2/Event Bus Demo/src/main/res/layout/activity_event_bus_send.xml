<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="cn.com.binbin.leslie.EventBusActivity">

    <Button
        android:id="@+id/bt_event_bus_send_main"
        android:layout_width="match_parent"
        android:onClick="doSendInMain"
        android:text="主线程发送数据"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_receiver_sticky"
        android:onClick="doReceiverSticky"
        android:layout_width="match_parent"
        android:text="接收粘性数据"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="接收显示的结果"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/event_bus_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
