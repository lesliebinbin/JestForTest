<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.base" />

    <style name="AppTheme.base" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--主页的九宫格Button样式-->
    <style name="main_button">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">98dp</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <!--常用的文字格式-->
    <style name="main_text">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <!--textView 样式-->
    <style name="normal_textView">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:gravity">center</item>
    </style>
    <!--textView 样式-->
    <style name="normal_textView_2">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--textView 样式-->
    <style name="normal_textView_3">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableRight">@drawable/spinner_icon</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!--textView 样式-->
    <style name="normal_textView_4">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>


    <style name="normal_button">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@color/white</item>


    </style>
</resources>
