<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lemon.c.nms.ui.DCTInfoActivity">

    <include layout="@layout/classic_toolbar" />

    <include layout="@layout/custom_searchview" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/shadow" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_margin"
                android:layout_marginRight="@dimen/normal_margin"
                android:layout_marginTop="@dimen/normal_margin"
                android:background="@color/white"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:contentPadding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="DCT详细信息"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/big_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/normal_textView"
                            android:text="机房名称" />
                        <TextView
                            android:id="@+id/DCT_info1"
                            style="@style/normal_textView_2" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/normal_textView"
                            android:text="CMTS名称" />
                        <TextView
                            android:id="@+id/DCT_info2"
                            style="@style/normal_textView_2" />
                    </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/normal_textView"
                            android:text="光节点编号" />
                        <TextView
                            android:id="@+id/DCT_info3"
                            style="@style/normal_textView_2" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/normal_textView"
                            android:text="小区名称" />
                        <TextView
                            android:id="@+id/DCT_info4"
                            style="@style/normal_textView_2" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/normal_textView"
                            android:text="安装地址" />
                        <TextView
                            android:id="@+id/DCT_info5"
                            style="@style/normal_textView_2" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/normal_textView"
                            android:text="终端型号" />
                        <TextView
                            android:id="@+id/DCT_info6"
                            style="@style/normal_textView_2" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/normal_textView"
                            android:text="终端编号" />
                        <TextView
                            android:id="@+id/DCT_info7"
                            style="@style/normal_textView_2" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/normal_textView"
                            android:text="终端IP" />
                        <TextView
                            android:id="@+id/DCT_info8"
                            style="@style/normal_textView_2" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/normal_textView"
                            android:text="终端状态" />
                        <TextView
                            android:id="@+id/DCT_info9"
                            style="@style/normal_textView_2" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/normal_textView"
                            android:text="STB MAC" />
                        <TextView
                            android:id="@+id/DCT_info10"
                            style="@style/normal_textView_2" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/normal_textView"
                            android:text="CM MAC" />
                        <TextView
                            android:id="@+id/DCT_info11"
                            style="@style/normal_textView_2" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/normal_textView"
                            android:text="服务器IP" />
                        <TextView
                            android:id="@+id/DCT_info12"
                            style="@style/normal_textView_2" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/normal_textView"
                            android:text="通讯串口" />
                        <TextView
                            android:id="@+id/DCT_info13"
                            style="@style/normal_textView_2" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/normal_textView"
                            android:text="是否配置频道" />
                        <TextView
                            android:id="@+id/DCT_info14"
                            style="@style/normal_textView_2" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/normal_textView"
                            android:text="采集开关" />
                        <TextView
                            android:id="@+id/DCT_info15"
                            style="@style/normal_textView_2" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/normal_textView"
                            android:text="采集周期" />
                        <TextView
                            android:id="@+id/DCT_info16"
                            style="@style/normal_textView_2" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/normal_textView"
                            android:text="光机支路" />
                        <TextView
                            android:id="@+id/DCT_info17"
                            style="@style/normal_textView_2" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/normal_textView"
                            android:text="DCT正向衰减" />
                        <TextView
                            android:id="@+id/DCT_info18"
                            style="@style/normal_textView_2" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/normal_textView"
                            android:text="外界链路损耗" />
                        <TextView
                            android:id="@+id/DCT_info19"
                            style="@style/normal_textView_2" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/normal_textView"
                            android:text="DCT正向均衡" />
                        <TextView
                            android:id="@+id/DCT_info20"
                            style="@style/normal_textView_2" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/normal_textView"
                            android:text="DCT方向衰减" />
                        <TextView
                            android:id="@+id/DCT_info21"
                            style="@style/normal_textView_2" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/normal_textView"
                            android:text="安装人员" />
                        <TextView
                            android:id="@+id/DCT_info22"
                            style="@style/normal_textView_2" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/normal_textView"
                            android:text="备注信息" />
                        <TextView
                            android:id="@+id/DCT_info23"
                            style="@style/normal_textView_2" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/normal_textView"
                            android:text="时间" />
                        <TextView
                            android:id="@+id/DCT_info24"
                            style="@style/normal_textView_2" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_margin"
                android:layout_marginRight="@dimen/normal_margin"
                android:layout_marginTop="@dimen/normal_margin"
                android:background="@color/white"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:contentPadding="5dp">
                
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
