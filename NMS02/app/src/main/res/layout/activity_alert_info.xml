<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lemon.c.nms.ui.AlertInfoActivity">

    <include layout="@layout/classic_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryLight"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/menu_name"
            style="@style/normal_textView"
            android:layout_width="80dp"
            android:layout_weight="2"
            android:text="cmts名称" />

        <TextView
            android:id="@+id/menu_port"
            style="@style/normal_textView"
            android:layout_weight="4"
            android:text="端口名称" />

        <LinearLayout
            android:id="@+id/ll_order"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/menu_type"
                style="@style/normal_textView"
                android:layout_width="wrap_content"
                android:text="SNR值"
                android:textSize="@dimen/small_text_size" />

            <ImageView
                android:id="@+id/paixu_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/paixu_down" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/custom_loading" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/alert_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
